<?xml version="1.0" encoding="UTF-8" ?>

<plugin name="rhq-selenium-client-plugin"
		version="1.0"
        displayName="Selenium Test Case Executor"
        description="Run a Selenium RC/WebDriver Test Case script against a Web Application."
        package="org.rhq.plugins.seleniumclient"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="urn:xmlns:rhq-plugin"
        xmlns:c="urn:xmlns:rhq-configuration">

       <service name="Selenium Test Case"
            discovery="TestCaseServiceDiscovery"
            class="TestCaseServiceComponent"
            supportsManualAdd="true">

           <plugin-configuration>
           		<c:simple-property name="scriptFileName" displayName="Script Test Case File Name" required="true" />
           		<c:simple-property name="scriptLang" required="true" type="string">
           			<c:property-options>
           				<c:option value="Groovy" default="true"/>
           				<c:option value="Python"/>
           				<c:option value="Ruby"/>
           				<c:option value="Java JUnit"/>
           			</c:property-options>
           		</c:simple-property>
                <c:simple-property name="testCaseDescritption"  
                	displayName="Test Case Description"
                	required="false"
                	type="longString" />
           </plugin-configuration>
           
            <operation name="executeTestCase" displayName="Execute Test Case">
               <results configurationFormat="both">
               		<c:simple-property name="Status" />
               </results>
            </operation>
            
            <metric property="executionTime" 
            	displayName="Execution Time"
            	description="Time (ms) spent to execute the Test Case."
            	category="performance"
            	dataType="measurement"
            	defaultOn="true"
            	measurementType="dynamic"
            	displayType="summary"
            	units="milliseconds"/>

            <metric property="status" 
            	displayName="Execution Status"
            	dataType="trait"
            	defaultOn="true"
            	displayType="summary"/>
            	
	         <!-- content name="file" displayName="Script File" category="executableScript" isCreationType="true">
	            <configuration>
	           		<c:simple-property name="scriptFileName" displayName="Script Test Case File Name" required="true" />
					<c:simple-property name="lang" displayName="Source Code Language" required="true" />
	            </configuration>
	         </content -->            	

       </service>

</plugin>